{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5440;Database=realserv_notification_db;Username=postgres;Password=postgres",
    "Redis": "localhost:6379"
  },
  "AWS": {
    "Region": "ap-south-1",
    "SES": {
      "FromEmail": "noreply@realserv.in",
      "FromName": "RealServ"
    }
  },
  "WhatsApp": {
    "PhoneNumberId": "YOUR_WHATSAPP_PHONE_NUMBER_ID",
    "AccessToken": "YOUR_WHATSAPP_ACCESS_TOKEN",
    "BusinessAccountId": "YOUR_WHATSAPP_BUSINESS_ACCOUNT_ID"
  },
  "Firebase": {
    "CredentialPath": "/app/firebase-credentials.json"
  },
  "Observability": {
    "ServiceName": "NotificationService",
    "ServiceVersion": "1.0.0",
    "Environment": "production"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  }
}
