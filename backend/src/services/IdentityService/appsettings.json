{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "IdentityServiceDb": "Host=localhost;Database=realserv_identity_db;Username=postgres;Password=postgres"
  },
  "Firebase": {
    "ProjectId": "realserv-mvp-test",
    "CredentialsPath": "firebase-admin-sdk.json",
    "ApiKey": "YOUR_FIREBASE_WEB_API_KEY_HERE"
  },
  "Jwt": {
    "Issuer": "realserv-identity-service",
    "Audience": "realserv-clients",
    "SecretKey": "your-secret-key-change-in-production-minimum-32-characters-long-for-security",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 30
  },
  "Email": {
    "Provider": "SMTP",
    "Smtp": {
      "Host": "smtp.gmail.com",
      "Port": 587,
      "Username": "YOUR_EMAIL@gmail.com",
      "Password": "YOUR_APP_PASSWORD",
      "FromEmail": "noreply@realserv.com",
      "FromName": "RealServ"
    },
    "SendGrid": {
      "ApiKey": "YOUR_SENDGRID_API_KEY",
      "FromEmail": "noreply@realserv.com",
      "FromName": "RealServ"
    }
  },
  "Sms": {
    "Provider": "Twilio",
    "Twilio": {
      "AccountSid": "YOUR_TWILIO_ACCOUNT_SID",
      "AuthToken": "YOUR_TWILIO_AUTH_TOKEN",
      "FromNumber": "+1234567890"
    }
  },
  "Otp": {
    "ExpirationMinutes": 5,
    "MaxAttempts": 3,
    "CodeLength": 6
  },
  "Cors": {
    "AllowedOrigins": ["http://localhost:3000", "http://localhost:5173"],
    "AllowCredentials": true
  }
}